<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fruitshop.fruitshop_backend.mapper.ItemMapper">

    <insert id="insertItem" parameterType="com.fruitshop.fruitshop_backend.dto.ItemDto">
        INSERT INTO items (name) VALUES (#{item});
    </insert>

    <select id="selectById" resultMap="com.fruitshop.fruitshop_backend.dto.ItemDto">
        SELECT id, name FROM items WHERE id = #{id};
    </select>

</mapper>